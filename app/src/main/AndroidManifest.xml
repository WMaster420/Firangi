<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vinayreddy.firangi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Firangi">
        <activity android:name=".ui.SplashScreenActivity"
            android:theme="@style/Theme.Firangi.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BasicsActivity"
            android:theme="@style/Theme.Firangi.NoActionBar" />
        <activity
            android:name=".ui.LeaderboardsActivity"
            android:theme="@style/Theme.Firangi.NoActionBar" />
        <activity
            android:name=".ui.FeedbackActivity"
            android:theme="@style/Theme.Firangi.NoActionBar" />
        <activity
            android:name=".ui.CourseSelectionActivity"
            android:theme="@style/Theme.Firangi.NoActionBar" />
        <activity android:name=".ui.EditProfileActivity" />
        <activity
            android:name=".ui.LessonActivity"
            android:theme="@style/Theme.Firangi.NoActionBar" />
        <activity
            android:name=".ui.HomeScreenActivity"
            android:theme="@style/Theme.Firangi.NoActionBar" />
        <activity
            android:name=".ui.TestActivity"
            android:theme="@style/Theme.Firangi.NoActionBar" />
        <activity android:name=".ui.SignUpActivity" />
        <activity android:name=".ui.SignInActivity"/>
    </application>

</manifest>