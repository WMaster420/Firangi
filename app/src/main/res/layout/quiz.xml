<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/knwtst"
        android:gravity="center"
        android:text="Knowledge Test"
        android:textSize="32dp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/knwtst"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-59dp">

        <TextView
            android:id="@+id/cardQues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Question goes here"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="opt4click"
        android:id="@+id/cardViewO4"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/knwtst"
        app:layout_constraintVertical_bias="0.703"
        tools:layout_editor_absoluteX="40dp">

        <TextView
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="option 4"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="opt3click"
        android:id="@+id/cardViewO3"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/knwtst"
        app:layout_constraintVertical_bias="0.603"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Option 3"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="opt2click"
        android:id="@+id/cardViewO2"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/knwtst"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Option 2"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="opt1click"
        android:id="@+id/cardViewO1"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/knwtst"
        app:layout_constraintVertical_bias="0.396"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Option 1"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/nxtbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/nxtbtn"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/knwtst"
        app:layout_constraintVertical_bias="0.9"
        tools:layout_editor_absoluteX="-16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NEXT"
            android:textAllCaps="true"
            android:textSize="24dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>